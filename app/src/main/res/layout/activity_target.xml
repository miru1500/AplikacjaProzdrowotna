<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:fillViewport="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_15sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingTop="@dimen/_10sdp"
        tools:context="com.example.aplikacjaprozdrowotna.ActivityCigTarget">

        <TextView
            android:id="@+id/textView23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text='Żeby dodać cel, wciśnij przycisk "Dodaj cel". Jeśli chcesz odhaczyć cel, przytrzymaj pozycję na liście.'
            android:textAlignment="center"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@android:color/darker_gray"/>

        <ListView
            android:id="@+id/lvTargets"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp" />

        <Button
            android:id="@+id/btnNewTarget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dodaj cel" />
    </LinearLayout>
</ScrollView>