<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:fillViewport="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_15sdp"
        tools:context="com.example.aplikacjaprozdrowotna.ActivityCigStartInfo">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_15sdp"
            android:text="Gratuluję rzucenia palenia!"
            android:textAlignment="center"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:text="Kiedy rzuciłeś?"
            android:textAlignment="center"
            android:textSize="@dimen/_12sdp" />

        <Button
            android:id="@+id/btnQuitDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wybierz datę" />

        <TextView
            android:id="@+id/tvQuitDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="@dimen/_12sdp" />

        <Button
            android:id="@+id/btnQuitTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wybierz godzinę" />

        <TextView
            android:id="@+id/tvQuitTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:gravity="center_horizontal"
            android:text="Ile papierosów paliłeś dziennie?"
            android:textSize="@dimen/_12sdp" />

        <EditText
            android:id="@+id/etCigsSmoked"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:gravity="center_horizontal"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:gravity="center_horizontal"
            android:text="Ile papierosów było w paczce?"
            android:textSize="@dimen/_12sdp" />

        <EditText
            android:id="@+id/etCigsInPack"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:gravity="center_horizontal"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:gravity="center_horizontal"
            android:text="Ile kosztowała paczka?"
            android:textSize="@dimen/_12sdp"/>

        <EditText
            android:id="@+id/etPackCost"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:gravity="center_horizontal"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/btnDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:backgroundTint="@color/colorGreen"
            android:text="Gotowe!"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>